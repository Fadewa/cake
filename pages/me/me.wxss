/* pages/me/me.wxss */
@import '../style/weui.wxss';
@import '../style/iconfont.wxss';
.me{
  width: 100%;
  height: 260rpx;
  position: relative;
}
.me_info{
  position: absolute;
  width: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  padding: 12rpx;
}
.me_info image{
  width: 56rpx;
  height: 56rpx;
}
.head_l{
  padding: 24rpx;
  border-radius: 50%;
  position: absolute;
  top: -24rpx;
  background: #fff;
}
.head_m{
  padding-left: 40%;
}
.mobile{
  color: #a3a3a3;
  font-size: 22rpx;
}
.coupon{
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 24rpx 0;
  margin-bottom: 24rpx; 
}
.coupon>view{
  width: 50%;
}
.coupon>view:first-child{
  border-right: solid 1px #a3a3a3;
}
.text{
  color: #a3a3a3;
  font-size: 22rpx;
}
.iconfont{
  font-size: 42rpx;
}
.weui-cell__bd{
  font-size: 28rpx;
}
.weui-cell{
  padding: 6px 4%;
}
.weui-panel__bd{
  margin: 24rpx 0;
}
.hotline{
  display: flex;
  justify-content: space-between;
  padding: 12rpx 4%;
  align-items: center;
}
.hotline>view:first-child{
  width: 80%;
  border-right: solid 1px #a3a3a3;
}
.hotline>view:last-child{
  width: 20%;
}