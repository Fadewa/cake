/* pages/lists/lists.wxss */
@import '../style/iconfont.wxss';
@import '../style/weui.wxss';

page{
  background: #fff;
}
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}
.weui-navbar{
  height: 50px;
  white-space: nowrap;
}
.weui-navbar__item{
  flex: 0;
  display: inline-block;
  width: 140px;
}
.weui-bar__item_on{
  position: relative;
}
.weui-bar__item_on:after{
  content: "";
  width: 80px;
  height: 2px;
  background: #1aad19;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,0);
  -webkit-transform: translate(-50%,0);
}
.weui-tab__content{
  padding: 0 4%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.cake_box{
  display: inline-block;
  width: 45%;
  text-align: left;
  font-size: 22rpx;
}
.cake_box image{
  width: 100%;
  height: 260rpx;
}
.intro{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.intro text{
  display: inline-block;
}
.intro,.price{
  color: #a3a3a3;
}